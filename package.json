{
  "name": "rumi-magic-cookbook",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src/",
    "test": "node --experimental-strip-types --experimental-test-isolation=none --test tests/cron-cleanup-route.test.ts",
    "postinstall": "prisma generate || true",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "setup:admin-pin": "node scripts/setup-admin-pin.mjs",
    "setup:session-secret": "node scripts/setup-session-secret.mjs",
    "setup:dev-secrets": "npm run setup:admin-pin && npm run setup:session-secret",
    "env:check": "node scripts/env-check.mjs"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.3.1",
    "framer-motion": "^12.34.3",
    "next": "16.1.6",
    "openai": "^6.22.0",
    "prisma": "^7.4.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "server-only": "^0.0.1",
    "uuid": "^13.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
